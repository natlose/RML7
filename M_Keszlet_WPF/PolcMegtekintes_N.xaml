<UserControl x:Class="Sajat.Keszlet.PolcMegtekintes_N"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Sajat.Keszlet"
             xmlns:sajatwpf="clr-namespace:Sajat.WPF;assembly=M_Komponensek_WPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <sajatwpf:EgysegnyiMegnyitas Bezar="Bezaraskor">
        <StackPanel >
            <sajatwpf:StatikusSzoveg Cimke="Raktár" Szoveg="{Binding Raktar.Nev}" />
            <sajatwpf:StatikusSzoveg Cimke="Polc" Szoveg="{Binding Polc.Kod}" />
            <sajatwpf:StatikusSzoveg Cimke="Megjegyzés" Szoveg="{Binding Polc.Megjegyzes}" />
            <sajatwpf:GombosLista TetelForras="{Binding Polc.Keszletek, Mode=OneWay}" Cimke="Készletek">
                <GridViewColumn DisplayMemberBinding="{Binding CikkID}" Header="Cikk ID" Width="120" />
                <GridViewColumn DisplayMemberBinding="{Binding Meny}" Header="Készlet" Width="100" />
            </sajatwpf:GombosLista>
        </StackPanel>
    </sajatwpf:EgysegnyiMegnyitas>
</UserControl>
