<UserControl x:Class="Sajat.WPF.RogzitElvetGombok"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Sajat.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel 
        DataContext="{Binding Mode=OneWay, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}}"
        Orientation="Horizontal"         
    >
        <Button Content="Rögzít" Click="RogzitClick" />
        <Button x:Name="ElvetGomb" Content="Elvet" Click="ElvetClick"/>
        <StackPanel x:Name="ElvetesMegerositesePanel" Orientation="Horizontal" Visibility="Hidden">
            <TextBlock Text="Van változás! Elveti?" />
            <Button Content="Elvetem" Click="ElvetesMegerositveClick"/>
            <Button Content="Nem" Click="ElvetesMegszakitvaClick"/>
        </StackPanel>
    </StackPanel>
</UserControl>
