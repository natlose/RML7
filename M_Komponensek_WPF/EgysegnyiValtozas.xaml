<UserControl x:Class="Sajat.WPF.EgysegnyiValtozas"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Sajat.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <local:RogzitesEredmenyToVisibilityConverter x:Key="VersenyhelyzetVisible" VisibleEredmeny="Versenyhelyzet"/>
        <local:RogzitesEredmenyToVisibilityConverter x:Key="ErvenytelenAdatVisible" VisibleEredmeny="ErvenytelenAdat"/>
        <local:RogzitesEredmenyToVisibilityConverter x:Key="NemTarolhatoVisible" VisibleEredmeny="NemTarolhato"/>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <StackPanel Orientation="Horizontal">
                <Button Click="RogzitClick" Style="{StaticResource RogzitGomb}"/>
                <StackPanel x:Name="ElvetTorolGombPanel" Orientation="Horizontal">
                    <Button Click="ElvetClick" Style="{StaticResource ElvetGomb}"/>
                    <Button Click="TorolClick" Style="{StaticResource TorolGomb}" Visibility="{Binding VanTorolVegrehajto, Converter={StaticResource BooleanToVisibilityConverter}, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:EgysegnyiValtozas}}}"/>
                </StackPanel>
                <StackPanel x:Name="ElvetesMegerositesePanel" Orientation="Horizontal" Visibility="Collapsed" Style="{StaticResource MegerositesPanel}">
                    <TextBlock Text="Van változás! Elveti?" Style="{StaticResource MegerositesSzoveg}"/>
                    <Button Click="ElvetesMegerositveClick" Style="{StaticResource ElvetestMegerositGomb}"/>
                    <Button Click="ElvetesMegszakitvaClick" Style="{StaticResource VisszavonGomb}"/>
                </StackPanel>
                <StackPanel x:Name="TorlesMegerositesePanel" Orientation="Horizontal" Visibility="Collapsed" Style="{StaticResource MegerositesPanel}">
                    <TextBlock Text="A törlés visszavonhatatlan! Törli?" Style="{StaticResource MegerositesSzoveg}" />
                    <Button Click="TorlesMegerositveClick" Style="{StaticResource TorlestMegerositGomb}"/>
                    <Button Click="TorlesMegszakitvaClick" Style="{StaticResource VisszavonGomb}"/>
                </StackPanel>
            </StackPanel>
            <Border 
                Visibility="{Binding RogzitesEredmeny, Converter={StaticResource VersenyhelyzetVisible}, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}}"
                Style="{StaticResource RogzitesEredmenyKeret}"
            >
                <StackPanel>
                    <TextBlock Text="FIGYELEM!" Style="{StaticResource RogzitesEredmenySzoveg}"/>
                    <TextBlock Text="Az adatokat időközben más módosította az adatbázisban." Style="{StaticResource RogzitesEredmenySzoveg}"/>
                    <TextBlock Text="A rögzítés NEM lehetséges!" Style="{StaticResource RogzitesEredmenySzoveg}"/>
                </StackPanel>
            </Border>
            <Border 
                Visibility="{Binding RogzitesEredmeny, Converter={StaticResource ErvenytelenAdatVisible}, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}}"
                Style="{StaticResource RogzitesEredmenyKeret}"
            >
                <StackPanel>
                    <TextBlock Text="FIGYELEM!" Style="{StaticResource RogzitesEredmenySzoveg}"/>
                    <TextBlock Text="Érvénytelen tartalom van a mezőkben!" Style="{StaticResource RogzitesEredmenySzoveg}"/>
                    <TextBlock Text="A rögzítés javítás után lehetséges!" Style="{StaticResource RogzitesEredmenySzoveg}"/>
                </StackPanel>
            </Border>
            <Border 
                Visibility="{Binding RogzitesEredmeny, Converter={StaticResource NemTarolhatoVisible}, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}}"
                Style="{StaticResource RogzitesEredmenyKeret}"
            >
                <StackPanel>
                    <TextBlock Text="FIGYELEM!" Style="{StaticResource RogzitesEredmenySzoveg}"/>
                    <TextBlock Text="Az adat nem tárolható!" Style="{StaticResource RogzitesEredmenySzoveg}"/>
                    <TextBlock Text="Lehet, hogy már létezik?" Style="{StaticResource RogzitesEredmenySzoveg}"/>
                </StackPanel>
            </Border>
        </StackPanel>
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ContentPresenter Content="{Binding Tartalom, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}}" />
        </ScrollViewer>
    </Grid>
</UserControl>
