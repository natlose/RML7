<UserControl x:Class="Sajat.Alkalmazas.WPF.BalMenu_N"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Sajat.Alkalmazas.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" 
             Loaded="FeluletBetoltesenekBefejezesekor">
    <UserControl.DataContext>
        <local:BalMenu_NM/>
    </UserControl.DataContext>
    <ItemsControl ItemsSource="{Binding LathatoSorok}" Background="Black">
        <ItemsControl.ItemTemplate>
            <DataTemplate>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="{Binding BehuzottMargo}"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="1" Text="{Binding Szoveg}" MouseUp="SorMouseUp" Style="{StaticResource BalMenuSor}"/>
                </Grid>
            </DataTemplate>
        </ItemsControl.ItemTemplate>
    </ItemsControl>
</UserControl>
